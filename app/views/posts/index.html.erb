<h1>All Posts</h1>

<% @posts.each do |post| %>
    <div style="border-style: solid; width: 90%; padding: 10px">
        <h2><%= link_to post.title, post_path(post) %></h2>
        By: <%= link_to post.blogger.name, blogger_path(post.blogger) %><br><br>
        <%= post.content %><br><br>
        Total Likes: <%= post.likes %><br><br>
    </div><br>
<% end %>